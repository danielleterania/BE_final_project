<h1>Complaints and Suggestions</h1>
<% @complaints.each do |complaint| %>
  <div>
    <p><strong>Complaint:</strong> <%= complaint.content %></p>
    <p><strong>Response:</strong> <%= complaint.response.present? ? complaint.response : "No response yet" %></p>
    <%= form_with url: respond_admin_complaint_path(complaint), method: :patch do |form| %>
      <%= form.text_area :response %>
      <%= form.submit 'Respond' %>
    <% end %>
  </div>
<% end %>
