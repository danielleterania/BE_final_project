<h1>Announcements</h1>

<%= form_with model: @announcement, url: admin_announcements_path, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title, 'Announcement Title' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :content, 'Announcement Content' %>
    <%= form.text_area :content, rows: 5, class: 'form-control' %>
  </div>

  <%= form.submit 'Create Announcement', class: 'btn btn-primary' %>
<% end %>

<h2>Existing Announcements</h2>
<% @announcements.each do |announcement| %>
  <div class="announcement">
    <h2><%= announcement.title %></h2>
    <p><%= announcement.content %></p>
    <%= button_to 'Delete', admin_announcement_path(announcement), method: :delete, class: 'btn btn-danger' %>
  </div>
<% end %>
