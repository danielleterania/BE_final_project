<h1>Your Complaints</h1>
<div id="complaints-list">
  <% @complaints.each do |complaint| %>
    <div class="complaint" data-id="<%= complaint.id %>">
      <p><strong>Complaint ID:</strong> <%= complaint.id %></p>
      <p><strong>Content:</strong> <%= complaint.content %></p>
      <p><strong>Response:</strong> <%= complaint.response.present? ? complaint.response : "No response yet" %></p>
      <%= link_to 'View Details', users_complaint_path(complaint), class: 'btn btn-info' %>
    </div>
  <% end %>
</div>

<h2>File a New Complaint</h2>
<%= form_with model: @complaint, url: users_complaints_path, method: :post, local: true do |form| %>
  <div class="form-group">
    <%= form.label :content, 'Your Complaint or Suggestion' %>
    <%= form.text_area :content, rows: 4, class: 'form-control' %>
  </div>
  <%= form.submit 'Submit Complaint', class: 'btn btn-primary' %>
<% end %>
