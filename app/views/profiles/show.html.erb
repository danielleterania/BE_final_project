<h1>My Profile</h1>
<p>Email: <%= @user.email %></p>

<h2>Payment Status</h2>
<% if @payments.present? %>
  <% @payments.each do |payment| %>
    <p>Payment: <%= payment.status %></p>
  <% end %>
<% else %>
  <p>No payment information available.</p>
<% end %>

<h2>Complaints and Suggestions</h2>
<%= form_with model: Complaint.new, url: users_complaints_path, local: true do |form| %>
  <div class="form-group">
    <%= form.label :content, 'Your Complaint or Suggestion' %>
    <%= form.text_area :content, rows: 5, class: 'form-control' %>
  </div>
  <%= form.submit 'Submit', class: 'btn btn-primary' %>
<% end %>

<% if @complaints.present? %>
  <% @complaints.each do |complaint| %>
    <div class="complaint">
      <p><%= complaint.content %></p>
      <p>Response: <%= complaint.response %></p>
    </div>
  <% end %>
<% else %>
  <p>No complaints or suggestions submitted.</p>
<% end %>
